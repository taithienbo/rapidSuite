<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:background="#FFFFFF" android:orientation="horizontal">

	<TextView android:id="@+id/textView_employee_field"
		android:layout_width="0dip" android:layout_weight="1"
		android:layout_height="wrap_content"
		style = "@style/TextStyle">
	</TextView>

	<TextView android:id="@+id/textView_employee_value"
		android:layout_width="0sp" android:layout_height="wrap_content"
		android:layout_weight="1" android:gravity="center_vertical"
		style = "@style/TextStyle">
	</TextView>

</LinearLayout>