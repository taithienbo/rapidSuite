<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:background="@drawable/rapidsuite_login_vertical"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/loginPage_exitText_user_name"
       style="@style/editText_user_authentication_vertical"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="180dp"
        android:layout_marginTop="280dp"
        android:hint="@string/user_name" >
    </EditText>

    <EditText
        android:id="@+id/loginPage_exitText_user_pass"
        style="@style/editText_user_authentication_vertical"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="180dp"
        android:hint="@string/user_pass" >
    </EditText>

    <Button
        android:id="@+id/loginPage_button_login"
        style="@style/editText_user_authentication_vertical"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="180dp"
        android:text="@string/login_button" >
    </Button>

</LinearLayout>